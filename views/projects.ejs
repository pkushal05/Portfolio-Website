    <link rel="stylesheet" href="../stylesheets/mediaQueries.css">

    <!-- FontAwesome and Typed.js for icon usage and typing animation -->
    <script src="https://kit.fontawesome.com/896278106b.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
</head>

<body>

    <!-- Navigation Bar -->
    <header>
        <nav class="nav-bar" aria-label="Main navigation">
            <h1 class="nav-name">Kushal.</h1>
            <ul>
                <!-- Navigation links with tabindex for accessibility -->
                <li><a href="/" tabindex="1" class="nav-links" aria-label="Go to Home page">Home</a></li>
                <li><a href="/aboutme" tabindex="2" class="nav-links" aria-label="Go to About Me page">About Me</a></li>
                <li><a href="/skills" tabindex="3" class="nav-links" aria-label="Go to Skills page">Skills</a></li>
                <li><a href="/projects" tabindex="4" class="nav-links" aria-label="Go to Projects page">Projects</a>
                </li>
                <li><a href="/contactme" tabindex="5" class="nav-links" aria-label="Go to Contact Me page">Contact
                        Me</a></li>
            </ul>
        </nav>

        <!-- Hamburger navigation bar for media-queries -->
        <nav class="nav-bar" aria-label="Mobile Navigation">
            <h1 class="nav-name"> Kushal.</h1>
            <input type="checkbox" id="sidebar-active" aria-label="Toggle sidebar menu">
            <label for="sidebar-active" class="open-sidebar-button" aria-label="Open sidebar navigation">
                <i class="fa-solid fa-bars fa-lg"></i>
            </label>

            <ul class="links-container">
                <label for="sidebar-active" class="close-sidebar-button" aria-label="Close sidebar navigation">
                    <i class="fa-solid fa-xmark fa-lg"></i>
                </label>
                <!-- Navigation links with tabindex for accessibility -->
                <li><a href="/" tabindex="1" class="nav-links" aria-label="Go to Home page">Home</a></li>
                <li><a href="/aboutme" tabindex="2" class="nav-links" aria-label="Go to About Me page">About Me</a></li>
