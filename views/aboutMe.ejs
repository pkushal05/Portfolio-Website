    <main class="main-body flex" aria-label="Main Content">
        <!-- Down arrow icon for scrolling -->
        <i id="arrow-down" class="fa-solid fa-angle-down" aria-hidden="true"></i>

        <!-- About Me Section -->
        <section class="aboutme-section" aria-label="About Me Section">
            <!-- Left side image -->
            <div class="left-about"><img class="aboutme-image" src="../images/Pick_me.png"
                    alt="Illustration for About Me section"></div>

            <!-- Right side content -->
            <div class="right-about">
                <div>
                    <!-- Title for the About Me section -->
                    <h2 class="aboutme-text"></h2>
                </div>
                <div class="aboutme-content">
                    <!-- Personal introduction -->
                    <p>I'm currently studying Computer Programming and Analysis at Durham College in Oshawa, Ontario. I
                        have a solid grasp of both front-end and back-end development, and I enjoy turning ideas into
                        responsive, real-world solutions. I'm always
                        looking to learn, grow,
                        and contribute to projects that make a real impact through thoughtful design and smart
                        technology.
                    </p>
                </div>
            </div>
        </section>

        <!-- Education Section -->
        <section class="education-section" aria-label="Education Section">
            <!-- Left side content for education -->
            <div class="left-about">
                <div>
                    <!-- Title for the Education section -->
                    <h2 class="education-text"></h2>
                </div>
                <div class="education-content">
                    <!-- Education details -->
                    <h3>Computer Programming and Analysis</h3>
                    <p>Durham College, Oshawa</p>
                    <p>September 2024 - April 2027</p>
                    <h3>Coursework</h3>
                    <!-- Typewriting animation for coursework -->
                    <p class="auto-type-text"></p>
